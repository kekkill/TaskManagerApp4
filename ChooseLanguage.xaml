<Controls:MetroWindow x:Class="TaskManagerApp.ChooseLanguage"
                      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                      xmlns:Controls="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
                      xmlns:res="clr-namespace:TaskManagerApp.Resources"
                      Title="{x:Static res:Strings.ChooseLanguage_Title}"
                      Height="300" Width="400"
                      WindowStartupLocation="CenterScreen"
                      GlowBrush="{DynamicResource MahApps.Brushes.Accent}"
                      ResizeMode="NoResize">

    <Grid Margin="30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="{x:Static res:Strings.ChooseLanguage_Description}"
                   FontSize="16"
                   FontWeight="Bold"
                   TextWrapping="Wrap"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,20"/>

        <ComboBox x:Name="LanguageComboBox"
                  Grid.Row="1"
                  Width="200"
                  Height="30"
                  HorizontalAlignment="Center"
                  Margin="0,0,0,30">
            <ComboBoxItem Content="{x:Static res:Strings.ChooseLanguage_Russian}"/>
            <ComboBoxItem Content="{x:Static res:Strings.ChooseLanguage_English}"/>
            <ComboBoxItem Content="{x:Static res:Strings.ChooseLanguage_German}"/>
        </ComboBox>

        <Button x:Name="NextButton"
                Grid.Row="2"
                Content="{x:Static res:Strings.ChooseLanguage_NextButton}"
                Width="100"
                Height="40"
                HorizontalAlignment="Center"
                Background="#FF2196F3"
                Foreground="White"
                Click="Button_Click"/>

    </Grid>
</Controls:MetroWindow>