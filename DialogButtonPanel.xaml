<UserControl x:Class="App4.DialogButtonPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" Height="50" Width="170">
    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
        <Button x:Name="OkButton" 
                Content="OK" 
                Width="80" 
                Height="30"
                Background="#FF53DC58"
                Foreground="White"
                Margin="0,0,10,0"
                Click="OkButton_Click"/>
        <Button x:Name="CancelButton" 
                Content="ОТМЕНА" 
                Width="80" 
                Height="30"
                Background="#FF5D5F5D"
                Foreground="White"
                Click="CancelButton_Click"/>
    </StackPanel>
</UserControl>