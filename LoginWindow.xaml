<Controls:MetroWindow x:Class="App4.LoginWindow"
                      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                      xmlns:Controls="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
					  xmlns:controls="clr-namespace:App4"
                      Title="Вход в систему"
                      WindowStartupLocation="CenterScreen"
                      ShowInTaskbar="False" Width="380" Height="356">

    <Grid Margin="30,30,30,25">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Система управления задачами" 
                   FontSize="20" 
                   FontWeight="Bold"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,20"/>

        <TextBlock Text="Имя пользователя:" 
                   Grid.Row="1"
                   FontWeight="Bold"
                   Margin="0,0,0,5"/>

        <TextBox x:Name="UsernameTextBox" 
                 Grid.Row="2"
                 Padding="10"
                 FontSize="14"
                 Margin="0,0,0,15"/>

        <TextBlock Text="Пароль:" 
                   Grid.Row="3"
                   FontWeight="Bold"
                   Margin="0,0,0,5"/>

        <PasswordBox x:Name="PasswordBox" 
                     Grid.Row="4"
                     Padding="10"
                     FontSize="14"
                     Margin="0,0,0,15"/>
		<StackPanel Grid.Row="5" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
			<Button Content="Войти"
					Click="LoginButton_Click"
					Width="100"
					Height="40"
					Margin="0,0,20,0"
					Background="#FF2196F3"
					Foreground="White"/>

			<Button Content="Регистрация"
					Click="RegisterButton_Click"
					Width="100"
					Height="40"
					Background="#FF4CAF50"
					Foreground="White"/>
		</StackPanel>
    </Grid>
</Controls:MetroWindow>