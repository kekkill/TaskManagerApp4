<Controls:MetroWindow x:Class="TaskManagerApp.RegisterWindow"
                      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                      xmlns:Controls="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
                      xmlns:res="clr-namespace:TaskManagerApp.Resources"
                      Title="{x:Static res:Strings.RegisterWindow_Title}" Height="450" Width="450"
                      WindowStartupLocation="CenterScreen"
                      ShowInTaskbar="False">

    <Grid Margin="30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="{x:Static res:Strings.RegisterWindow_Header}" 
                   FontSize="20" 
                   FontWeight="Bold"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,20"/>

        <TextBlock Text="{x:Static res:Strings.RegisterWindow_UsernameLabel}" 
                   Grid.Row="1"
                   FontWeight="Bold"
                   Margin="0,0,0,5"/>

        <TextBox x:Name="UsernameTextBox" 
                 Grid.Row="2"
                 Padding="10"
                 FontSize="14"
                 Margin="0,0,0,15"/>

        <TextBlock Text="{x:Static res:Strings.RegisterWindow_EmailLabel}" 
                   Grid.Row="3"
                   FontWeight="Bold"
                   Margin="0,0,0,5"/>

        <TextBox x:Name="EmailTextBox" 
                 Grid.Row="4"
                 Padding="10"
                 FontSize="14"
                 Margin="0,0,0,15"/>

        <TextBlock Text="{x:Static res:Strings.RegisterWindow_PasswordLabel}" 
                   Grid.Row="5"
                   FontWeight="Bold"
                   Margin="0,0,0,5"/>

        <PasswordBox x:Name="PasswordBox" 
                     Grid.Row="6"
                     Padding="10"
                     FontSize="14"
                     Margin="0,0,0,20"/>

        <Button Content="{x:Static res:Strings.RegisterWindow_RegisterButton}" 
                Grid.Row="6"
                Click="RegisterButton_Click"
                Width="200"
                HorizontalAlignment="Center"
                Background="#FF4CAF50"
                Foreground="White" Margin="0,53,0,-36"/>
    </Grid>
</Controls:MetroWindow>