<Controls:MetroWindow x:Class="TaskManagerApp.MainWindow"
                      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                      xmlns:Controls="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
                      xmlns:local="clr-namespace:TaskManagerApp"
                      xmlns:res="clr-namespace:TaskManagerApp.Resources"
                      Title="{x:Static res:Strings.MainWindow_Title}" 
                      Height="650" Width="1000"
                      WindowStartupLocation="CenterScreen"
                      MinWidth="800" MinHeight="500">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Text="{x:Static res:Strings.MainWindow_SystemTitle}" 
                   FontSize="24" 
                   FontWeight="Bold" 
                   Margin="0,0,0,20"/>
        <TabControl Grid.Row="1" TabStripPlacement="Top">
            <TabItem Header="{x:Static res:Strings.MainWindow_TabProcesses}">
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                        <Button Content="{x:Static res:Strings.MainWindow_RefreshButton}" 
                                Click="RefreshData_Click"
                                Padding="15,5"
                                FontSize="14"
                                Margin="0,0,10,0"/>

                        <Button Content="{x:Static res:Strings.MainWindow_AddProcessButton}" 
                                Click="AddProcess_Click"
                                Padding="15,5"
                                FontSize="14"
                                Background="#FF4CAF50"
                                Foreground="White"
                                Margin="0,0,10,0"/>

                        <Button Content="{x:Static res:Strings.MainWindow_EditButton}" 
                                x:Name="EditProcessButton"
                                Click="EditProcess_Click"
                                Padding="15,5"
                                FontSize="14"
                                Background="#FF2196F3"
                                Foreground="White"
                                IsEnabled="False"/>
                    </StackPanel>

                    <DataGrid x:Name="ProcessesDataGrid" 
                              Grid.Row="1" 
                              AutoGenerateColumns="False" 
                              IsReadOnly="False"
                              SelectionChanged="ProcessesDataGrid_SelectionChanged"
                              CanUserAddRows="False"
                              SelectionMode="Single"
                              SelectionUnit="FullRow">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="{x:Static res:Strings.MainWindow_IDColumn}" Binding="{Binding Id}" Width="50" IsReadOnly="True"/>
                            <DataGridTextColumn Header="{x:Static res:Strings.MainWindow_ProcessNameColumn}" Binding="{Binding Name}" Width="2*"/>
                            <DataGridTextColumn Header="{x:Static res:Strings.MainWindow_TaskCountColumn}" Binding="{Binding Tasks.Count}" Width="80" IsReadOnly="True"/>
                            <DataGridTextColumn Header="{x:Static res:Strings.MainWindow_CreatedColumn}" Binding="{Binding CreatedAt, StringFormat={}{0:dd.MM.yyyy}}" Width="100" IsReadOnly="True"/>
                            <DataGridTemplateColumn Header="{x:Static res:Strings.MainWindow_ActionsColumn}" Width="150">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal">
                                            <Button Content="{x:Static res:Strings.MainWindow_DeleteButton}" 
                                                    Click="DeleteProcess_Click"
                                                    Tag="{Binding Id}"
                                                    Background="#FFF44336"
                                                    Foreground="White"
                                                    Width="70"
                                                    Margin="0,0,5,0"/>
                                            <Button Content="{x:Static res:Strings.MainWindow_EditButton}" 
                                                    Click="EditProcessFromGrid_Click"
                                                    Tag="{Binding Id}"
                                                    Background="#FF2196F3"
                                                    Foreground="White"
                                                    Width="80"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </TabItem>

            <TabItem Header="{x:Static res:Strings.MainWindow_TabTasks}">
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <ComboBox x:Name="ProcessComboBox" 
                              Grid.Row="0" 
                              Margin="0,0,0,15"
                              DisplayMemberPath="Name"
                              SelectedValuePath="Id"
                              SelectionChanged="ProcessComboBox_SelectionChanged"
                              FontSize="14"
                              Padding="5"/>

                    <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,15" HorizontalAlignment="Right">
                        <Button Content="{x:Static res:Strings.MainWindow_AddTaskButton}" 
                                x:Name="AddTaskButton"
                                Click="AddTask_Click"
                                Padding="15,5"
                                FontSize="14"
                                Background="#FF2196F3"
                                Foreground="White"
                                IsEnabled="False"
                                Margin="0,0,10,0"/>

                        <Button Content="{x:Static res:Strings.MainWindow_EditButton}" 
                                x:Name="EditTaskButton"
                                Click="EditTask_Click"
                                Padding="15,5"
                                FontSize="14"
                                Background="#FFFF9800"
                                Foreground="White"
                                IsEnabled="False"/>
                    </StackPanel>

                    <DataGrid x:Name="TasksDataGrid" 
                              Grid.Row="2" 
                              AutoGenerateColumns="False" 
                              IsReadOnly="False"
                              CanUserAddRows="False"
                              SelectionMode="Single"
                              SelectionUnit="FullRow">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="{x:Static res:Strings.MainWindow_IDColumn}" Binding="{Binding Id}" Width="50" IsReadOnly="True"/>
                            <DataGridTextColumn Header="{x:Static res:Strings.MainWindow_TaskNameColumn}" Binding="{Binding TaskName}" Width="2*"/>
                            <DataGridTextColumn Header="{x:Static res:Strings.MainWindow_StatusColumn}" Binding="{Binding Status}" Width="100"/>
                            <DataGridTextColumn Header="{x:Static res:Strings.MainWindow_AssignedToColumn}" 
                    Binding="{Binding AssignedToUser.Username, TargetNullValue={x:Static res:Strings.AssignmentMessage}}" 
                    Width="120"/>
                            <DataGridTextColumn Header="{x:Static res:Strings.MainWindow_CreatedColumn}" Binding="{Binding CreatedAt, StringFormat={}{0:dd.MM.yyyy}}" Width="100" IsReadOnly="True"/>
                            <DataGridTemplateColumn Header="{x:Static res:Strings.MainWindow_ActionsColumn}" Width="150">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal">
                                            <Button Content="{x:Static res:Strings.MainWindow_DeleteButton}" 
                                                    Click="DeleteTask_Click"
                                                    Tag="{Binding Id}"
                                                    Background="#FFF44336"
                                                    Foreground="White"
                                                    Width="70"
                                                    Margin="0,0,5,0"/>
                                            <Button Content="{x:Static res:Strings.MainWindow_EditButton}" 
                                                    Click="EditTaskFromGrid_Click"
                                                    Tag="{Binding Id}"
                                                    Background="#FFFF9800"
                                                    Foreground="White"
                                                    Width="80"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>

                    <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,15,0,0">
                        <TextBlock Text="{x:Static res:Strings.MainWindow_TotalTasksLabel}" FontWeight="Bold" Margin="0,0,5,0"/>
                        <TextBlock x:Name="TotalTasksText" Text="0" FontSize="14"/>
                    </StackPanel>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Controls:MetroWindow>